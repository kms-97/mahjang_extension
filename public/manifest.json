{
  "name": "mjsoul assistant",
  "description": "web mahjang game 'mahjang soul' assistant",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "64": "icon.png"
    }
  },
  "content_scripts" : [
    {
      "matches": ["https://game.mahjongsoul.com/index.html"],
      "js": ["content.js"]
    }
  ],
  "externally_connectable": {
    "ids": ["*"],
    "matches": ["https://game.mahjongsoul.com/*"]
  },
  "web_accessible_resources": [
    {
    "resources": ["page.js"],
    "matches": ["https://game.mahjongsoul.com/*"]
    }
  ]
}